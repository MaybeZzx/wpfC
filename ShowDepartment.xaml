<Window x:Class="employee.ShowDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:employee"
        mc:Ignorable="d"
        Title="ShowDepartment" Height="215" Width="277" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Please enter department" HorizontalAlignment="Left" Margin="54,39,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="54,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" Height="22" FontSize="14"/>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="54,123,0,0" VerticalAlignment="Top" Width="161" Height="25" Click="btnSelect_Click"/>

    </Grid>
</Window>
